<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/individual_item_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="6"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/individual_item_rack"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="6"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/individual_item_qty"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="7"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/individual_item_outqty"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="7"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/individual_item_barcode"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="6"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/individual_item_cancel"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="7"
            android:background="@color/whiteGray"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAlignment="center" />


    </LinearLayout>

</RelativeLayout>