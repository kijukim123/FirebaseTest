<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".PDA_AND_MAIN">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/skyBlue"
        android:orientation="horizontal">

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/info"
            android:layout_width="25dp"
            android:layout_height="52dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/user"
            android:layout_weight="2"
            android:layout_marginTop="3dp"
            />


        <TextView
            android:id="@+id/textView"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="N-STORM"
            android:textColor="#F4EDED"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="25dp"
            android:layout_height="52dp"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/enter"
            android:layout_weight="2"
            />

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/bio_scroll"
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/legacy_barcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="레거시 바코드 발행"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_barcode_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="바코드 입고"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_barcode_move"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="바코드 이동"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_individual_output"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="바코드개별출고"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_barcode_output"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="바코드 출고"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_barcode_output_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="바코드 출고 취소"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bar_merge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="바코드 병합"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bar_div"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="바코드 분할"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bar_mul_merge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="바코드 다중병합"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/barcode_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="바코드 실사"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/lookup_barcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="바코드 조회"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/lookup_lack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:backgroundTint="@color/whiteBlue"
                android:padding="22dp"
                android:text="랙 조회"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="238dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="N-STORM"
        android:textColor="#F4EDED"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>


